---
import peliculas from "../Data/peliculas.json";

interface Pelicula {
  id: number;
  nombre: string;
  año: number;
  duracion: number;
  imagen: string;
  descripcion: string;
}

const movies: Pelicula[] = peliculas;
---

<section class="py-12 bg-gray-900">
  <div class="max-w-7xl mx-auto px-6">
    <h2 class="text-3xl font-bold text-white mb-8">Películas Populares</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-8">
  {movies.map((movie) => (
    <div class="bg-gray-800 rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300 flex flex-col">
      <img
        src={movie.imagen}
        alt={movie.nombre}
        class="w-full h-[400px] object-contain bg-gray-700"
      />
      <div class="p-4 flex flex-col flex-1">
        <h3 class="text-xl font-semibold text-white mb-2">{movie.nombre}</h3>
        <p class="text-gray-300 mb-2">Año: {movie.año}</p>
        <p class="text-gray-300 mb-2">Duración: {movie.duracion} min</p>
        <p class="text-gray-300 mb-4 flex-1">
          {movie.descripcion.length > 100 ? movie.descripcion.slice(0, 100) + "..." : movie.descripcion}
        </p>
        <a
          href={`/peliculas/${movie.id}`}
          class="boton-card"
        >
          Leer más
        </a>
      </div>
    </div>
  ))}
</div>
  </div>
</section>