  <nav id="mobileMenu" class="hidden flex-col space-y-2 -mt-1 md:hidden px-6 bg-gray-800 bg-opacity-90">
    <a href="/" class="hover:text-yellow-400 py-2 block">Inicio</a>
    <a href="/nosotros" class="hover:text-yellow-400 py-2 block">Nosotros</a>
    <a href="/blog" class="hover:text-yellow-400 py-2 block">Blog</a>
    <a href="/contacto" class="hover:text-yellow-400 py-2 block">Contacto</a>
  </nav>

  <script>
    const btn = document.getElementById('menuBtn');
    const menu = document.getElementById('mobileMenu');

    btn?.addEventListener('click', () => {
      menu?.classList.toggle('hidden');
    });
  </script>
</header>
