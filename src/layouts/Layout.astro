---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css"
const { title = "InfoPelis" } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>

  <body class="text-white bg-gray-950 min-h-screen flex flex-col">

    <Header />

    <main class="flex-1">
      <slot />
    </main>

    <Footer />

  </body>
</html>

